@model Othello.Models.Player

@{
    ViewBag.Title = "Waiting...";
}

<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

<h2>Waiting for a playmate</h2>
<div>
    <b>Name:</b> @Html.ValueFor(model => model.Name)
    <br />
    <b>Last update:</b> @Html.ValueFor(model => model.LastUpdate)

    <br /><br />
    @Html.ActionLink("Check", "CheckForPlaymate", Model)
    <p style="font-style:italic">Tady tuhle akci bude potřeba volat periodicky. Třeba co 2s. A nejlíp jako POST namísto GET.</p>
</div>
